<div class="experience_wrapper">
  <% breadcrumb :experience_edit, @experience %>
  <%= render "shared/breadcrumbs" %>
  <div class="experience_wrapper__header">
    <h3><%= @experience.date.to_s %></h3>
  </div>

  <div class="form_indent"></div>
  <div class="experience_wrapper__content">
    <%= form_with(model: @experience, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <span class="label label-danger">必須</span>
      <%= f.label :explanation, "内容" %>
      <%= f.text_area :explanation, class: 'form-control' %>

      <div class="form_indent"></div>
      <span class="label label-success">任意</span>
      <span class="image">
        <%= f.label :image, "説明用の画像" %>
        <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
      </span>

      <div class="form_indent"></div>
      <%= f.submit "更新", class: "btn btn-primary" %>
    <% end %>
    <%= render 'shared/upload_image' %>
  </div>
</div>
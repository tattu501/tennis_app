<div class="term_wrapper">
  <% breadcrumb :term_show, @term %>
  <%= render "shared/breadcrumbs" %>
  <div class="term_wrapper__header">
    <h3><%= @term.term %></h3>
  </div>
  <div class="term_wrapper__content">
    <div class="term_wrapper__content__term_show">
      <%= image_tag @term.image, :size => '800x450' if @term.image.attached? %>
    </div>
    <div class="term_detail">
      <%= "#{@term.explanation}" %>
  </div>
</div>
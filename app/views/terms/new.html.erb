<h1 class="title">用語の登録</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @term, local: true) do |f| %>
      <%= render 'shared/term_messages' %>

      <%= f.label :term, "term(用語)" %>
      <%= f.text_field :term, class: 'form-control' %>

      <%= f.label :explanation, "explanation(内容)" %>
      <%= f.text_area :explanation, class: 'form-control' %>

      <%= f.submit "登録確定", class: "btn btn-primary" %>
      <span class="image">
        <%= f.file_field :image %>
      </span>
    <% end %>
  </div>
</div>
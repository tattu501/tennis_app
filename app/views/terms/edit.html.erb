<% breadcrumb :term_edit, @term %>
<%= render "shared/breadcrumbs" %>
<h3><%= @term.term %></h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @term, local: true) do |f| %>
      <%= render 'shared/term_messages' %>

      <%= f.label :explanation, "explanation(内容)" %>
      <%= f.text_area :explanation, class: 'form-control' %>

      <%= f.submit "更新", class: "btn btn-primary" %>
      <span class="image">
        <%= f.file_field :image %>
      </span>
    <% end %>
  </div>
</div>
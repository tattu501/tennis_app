<div class="user_wrapper">
  <% breadcrumb :user_show, @user %>
  <%= render "shared/breadcrumbs" %>
  <div class="user_wrapper__header">
    <h3>プロフィール</h3>
  </div>
    <div class="user_wrapper__content">
      <div class="user_wrapper__content__user_show">
        <div class="user_image">
          <%= image_tag @user.image, :size => '240x300' if @user.image.attached? %>
        <div class="user_name">
          <%= "名前：#{@user.name}" %>
        </div>
        <div class="user_detail">
          <%= @user.introduction %>
        </div>
      </div>
    </div>
  </div>
</div>
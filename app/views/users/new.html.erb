<h1 class="title">ユーザ登録</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/experience_messages' %>

      <%= f.label :name, "name(名前)" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email, "email(メールアドレス)" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "password(パスワード)" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "password_confirmation(パスワード確認)" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "登録確定", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
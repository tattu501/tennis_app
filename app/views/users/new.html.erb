<div class="user_wrapper">
  <% breadcrumb :user_new %>
  <%= render "shared/breadcrumbs" %>
  <div class="user_wrapper__header">
    <h3>ユーザ登録</h3>
  </div>

  <div class="form_indent"></div>
  <div class="user_wrapper__content">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <span class="label label-danger">必須</span>
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: 'form-control' %>

      <span class="label label-danger">必須</span>
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <span class="label label-danger">必須</span>
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: 'form-control' %>

      <span class="label label-danger">必須</span>
      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <div class="form_indent"></div>
      <span class="label label-success">任意</span>
      <%= f.label :introduction, "自己紹介文" %>
      <%= f.text_area :introduction, class: 'form-control' %>

      <span class="label label-success">任意</span>
      <span class="image">
        <%= f.label :image, "プロフィール画像" %>
        <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
      </span>

      <%= f.submit "登録確定", class: "btn btn-primary" %>
    <% end %>
    <%= render 'shared/upload_image' %>
  </div>
</div>